generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  player
  master
  admin
}

enum EventStatus {
  open
  closed
  cancelled

  @@map("event_status")
}

enum BetOutcome {
  win
  loose
  pending

  @@map("bet_outcome")
}

model User {
  userId           Int      @id @default(autoincrement()) @map("user_id")
  username         String   @unique
  userType         UserRole @default(player) @map("user_type")
  registrationDate DateTime @default(now()) @map("registration_date")

  bets   Bets[]
  events Events[]
  meta   UserMeta?

  @@map("user")
}

model UserMeta {
  id           Int     @id @default(autoincrement())
  userId       Int     @unique @map("user_id")
  user         User    @relation(fields: [userId], references: [userId])
  passwordSalt String? @map("password_salt")
  passwordHash String? @map("password_hash")

  @@map("user_meta")
}

model Events {
  eventId   Int         @id @default(autoincrement()) @map("event_id")
  sport     String      @map("sport")
  status    EventStatus @default(closed)
  eventDate DateTime    @default(now()) @map("event_date")

  userId Int    @map("user_id")
  user   User   @relation(fields: [userId], references: [userId])
  bets   Bets[]

  @@map("events")
}

model Bets {
  betId      Int        @id @default(autoincrement()) @map("bet_id")
  betDate    DateTime   @default(now()) @map("bet_date")
  betAmount  Decimal    @map("bet_amount")
  betOutcome BetOutcome @default(pending) @map("bet_outcome")

  eventId Int    @map("event_id")
  event   Events @relation(fields: [eventId], references: [eventId])

  userId Int  @map("user_id")
  user   User @relation(fields: [userId], references: [userId])

  @@map("bets")
}
